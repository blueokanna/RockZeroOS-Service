# 服务器配置
HOST=0.0.0.0
PORT=8080

# 数据库配置 (SQLite)
DATABASE_URL=sqlite:./rockzero.db?mode=rwc

# JWT 配置
JWT_SECRET=test-jwt-secret-key-for-development-only-change-in-production-must-be-long
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_EXPIRATION_DAYS=30

# 加密密钥 (32 字节 base64 编码)
ENCRYPTION_KEY=AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=

# CORS 配置 (逗号分隔)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# TLS 配置 (开发环境禁用)
TLS_ENABLED=false

# 日志级别
RUST_LOG=info,actix_web=info,sqlx=warn
