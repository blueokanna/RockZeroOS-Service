{
  "version": "2",
  "title": "RockZero Secure Service",
  "name": "rockzero-service",
  "icon": "https://cdn.jsdelivr.net/gh/IceWhaleTech/CasaOS-AppStore@main/Apps/rockzero/icon.png",
  "tagline": "Cross-platform secure service with hardware detection, media playback, and app store",
  "overview": "Production-grade secure service built with Rust. Features: Zero-knowledge proof authentication, Blake3 password hashing, hardware detection (CPU/Memory/Disk/USB), FFmpeg media transcoding with hardware acceleration (Rockchip MPP, Amlogic, Intel QSV, NVIDIA NVENC), Docker app store, file manager, and widget system. Supports aarch64, armv7, x86_64.",
  "thumbnail": "https://cdn.jsdelivr.net/gh/IceWhaleTech/CasaOS-AppStore@main/Apps/rockzero/thumbnail.png",
  "screenshots": [],
  "category": "Security",
  "developer": {
    "name": "RockZero Team",
    "website": "https://github.com/rockzero",
    "donate_text": ""
  },
  "adaptor": {
    "name": "RockZero",
    "image": "rockzero/rockzero-service:latest",
    "index": "/",
    "port": "8443",
    "scheme": "http"
  },
  "support": "https://github.com/rockzero/rockzero-service/issues",
  "website": "https://github.com/rockzero/rockzero-service",
  "container": {
    "image": "rockzero/rockzero-service:latest",
    "shell": "bash",
    "privileged": false,
    "network_mode": "bridge",
    "web_ui": {
      "http": "8443",
      "path": "/"
    },
    "health_check": "curl -f http://localhost:8443/health || exit 1",
    "envs": [
      {
        "key": "RUST_LOG",
        "value": "info",
        "configurable": "yes",
        "description": "Log level (debug, info, warn, error)"
      },
      {
        "key": "JWT_SECRET",
        "value": "",
        "configurable": "yes",
        "description": "JWT secret key (required, min 32 chars)"
      },
      {
        "key": "ENCRYPTION_KEY",
        "value": "",
        "configurable": "yes",
        "description": "Encryption key (required, 32 chars)"
      },
      {
        "key": "TLS_ENABLED",
        "value": "false",
        "configurable": "yes",
        "description": "Enable TLS (true/false)"
      }
    ],
    "ports": [
      {
        "container": "8443",
        "host": "8443",
        "type": "tcp",
        "allocation": "automatic",
        "configurable": "advanced",
        "description": "Web service port"
      }
    ],
    "volumes": [
      {
        "container": "/app/data",
        "host": "/DATA/AppData/rockzero/data",
        "mode": "rw",
        "allocation": "automatic",
        "configurable": "advanced",
        "description": "Database storage"
      },
      {
        "container": "/app/uploads",
        "host": "/DATA/AppData/rockzero/uploads",
        "mode": "rw",
        "allocation": "automatic",
        "configurable": "advanced",
        "description": "File uploads"
      },
      {
        "container": "/app/storage",
        "host": "/DATA/AppData/rockzero/storage",
        "mode": "rw",
        "allocation": "automatic",
        "configurable": "advanced",
        "description": "File manager storage"
      },
      {
        "container": "/var/run/docker.sock",
        "host": "/var/run/docker.sock",
        "mode": "rw",
        "allocation": "automatic",
        "configurable": "no",
        "description": "Docker socket for app store"
      },
      {
        "container": "/media",
        "host": "/media",
        "mode": "ro",
        "allocation": "automatic",
        "configurable": "advanced",
        "description": "Media files"
      }
    ],
    "devices": [
      {
        "container": "/dev/video10",
        "host": "/dev/video10",
        "description": "Rockchip MPP video encoder"
      },
      {
        "container": "/dev/video11",
        "host": "/dev/video11",
        "description": "Rockchip MPP video decoder"
      },
      {
        "container": "/dev/dri",
        "host": "/dev/dri",
        "description": "DRI devices for hardware acceleration"
      }
    ],
    "constraints": {
      "min_memory": 256,
      "min_storage": 2048
    },
    "restart_policy": "unless-stopped",
    "sysctls": [],
    "cap_add": ["NET_BIND_SERVICE", "SYS_ADMIN"],
    "cap_drop": ["ALL"],
    "security_opt": ["no-new-privileges:true"]
  },
  "abilities": {
    "notification": false,
    "widgets": true,
    "authentication": true,
    "search": false,
    "upnp": false
  },
  "tips": {
    "before_install": [
      {
        "content": "‚ö†Ô∏è Must set JWT_SECRET and ENCRYPTION_KEY before installation",
        "value": "warning"
      },
      {
        "content": "üîê First registration becomes super admin automatically",
        "value": "info"
      },
      {
        "content": "üìù Subsequent users need invite code from super admin (valid 1 hour)",
        "value": "info"
      },
      {
        "content": "üé¨ Hardware acceleration: Rockchip MPP, Amlogic, Intel QSV, NVIDIA NVENC",
        "value": "info"
      },
      {
        "content": "üê≥ Docker app store: Install Nextcloud, Jellyfin, Portainer, Home Assistant",
        "value": "info"
      }
    ]
  },
  "changelog": {
    "latest_updates": "v0.1.0 - Production release: Hardware detection, FFmpeg transcoding, Docker app store, file manager, widgets"
  },
  "latest_update_date": "2026-01-12",
  "architectures": ["amd64", "arm64", "arm/v7"]
}
