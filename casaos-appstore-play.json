{
  "version": "2",
  "title": "RockZero Secure Service",
  "name": "rockzero-service",
  "icon": "https://ghp.ci/https://raw.githubusercontent.com/IceWhaleTech/CasaOS-AppStore/main/Apps/rockzero/icon.png",
  "tagline": "Enterprise-grade secure service with disk management, app store, and hardware acceleration",
  "overview": "Production-grade secure service built with Rust. Features: Zero-knowledge proof authentication, FIDO2/Passkey support, Blake3 password hashing, hardware detection (CPU/Memory/Disk/USB), disk management (mount/format/unmount), FFmpeg media transcoding with hardware acceleration (Rockchip MPP, Amlogic, Intel QSV, NVIDIA NVENC), Docker app store (CasaOS/iStoreOS), file manager with preview, and widget system. Supports aarch64, armv7, x86_64. Fixed: Disk operation 404 errors, App Store network issues, wallpaper theme system.",
  "thumbnail": "https://ghp.ci/https://raw.githubusercontent.com/IceWhaleTech/CasaOS-AppStore/main/Apps/rockzero/thumbnail.png",
  "screenshots": [],
  "category": "Security",
  "developer": {
    "name": "RockZero Team",
    "website": "https://github.com/rockzero",
    "donate_text": ""
  },
  "adaptor": {
    "name": "RockZero",
    "image": "rockzero/rockzero-service:latest",
    "index": "/",
    "port": "8080",
    "scheme": "http"
  },
  "support": "https://github.com/rockzero/rockzero-service/issues",
  "website": "https://github.com/rockzero/rockzero-service",
  "container": {
    "image": "rockzero/rockzero-service:latest",
    "shell": "bash",
    "privileged": true,
    "network_mode": "host",
    "web_ui": {
      "http": "8080",
      "path": "/"
    },
    "health_check": "curl -f http://localhost:8080/health || exit 1",
    "envs": [
      {
        "key": "RUST_LOG",
        "value": "info",
        "configurable": "yes",
        "description": "Log level (debug, info, warn, error)"
      },
      {
        "key": "JWT_SECRET",
        "value": "",
        "configurable": "yes",
        "description": "JWT secret key (required, min 32 chars)"
      },
      {
        "key": "ENCRYPTION_KEY",
        "value": "",
        "configurable": "yes",
        "description": "Encryption key (required, 32 chars)"
      },
      {
        "key": "TLS_ENABLED",
        "value": "false",
        "configurable": "yes",
        "description": "Enable TLS (true/false)"
      },
      {
        "key": "BIND_ADDRESS",
        "value": "0.0.0.0:8080",
        "configurable": "yes",
        "description": "Service bind address"
      },
      {
        "key": "DATABASE_URL",
        "value": "sqlite:///app/data/rockzero.db",
        "configurable": "no",
        "description": "Database path"
      },
      {
        "key": "ENABLE_HARDWARE_ACCEL",
        "value": "true",
        "configurable": "yes",
        "description": "Enable hardware acceleration for video transcoding"
      }
    ],
    "ports": [
      {
        "container": "8080",
        "host": "8080",
        "type": "tcp",
        "allocation": "automatic",
        "configurable": "advanced",
        "description": "Web service port"
      }
    ],
    "volumes": [
      {
        "container": "/app/data",
        "host": "/DATA/AppData/rockzero/data",
        "mode": "rw",
        "allocation": "automatic",
        "configurable": "advanced",
        "description": "Database and configuration storage"
      },
      {
        "container": "/app/uploads",
        "host": "/DATA/AppData/rockzero/uploads",
        "mode": "rw",
        "allocation": "automatic",
        "configurable": "advanced",
        "description": "File uploads"
      },
      {
        "container": "/app/storage",
        "host": "/DATA/AppData/rockzero/storage",
        "mode": "rw",
        "allocation": "automatic",
        "configurable": "advanced",
        "description": "File manager storage"
      },
      {
        "container": "/app/media",
        "host": "/DATA/Media",
        "mode": "rw",
        "allocation": "automatic",
        "configurable": "advanced",
        "description": "Media files storage"
      },
      {
        "container": "/var/run/docker.sock",
        "host": "/var/run/docker.sock",
        "mode": "rw",
        "allocation": "automatic",
        "configurable": "no",
        "description": "Docker socket for app store (required)"
      },
      {
        "container": "/mnt",
        "host": "/mnt",
        "mode": "rw",
        "allocation": "automatic",
        "configurable": "no",
        "description": "Mount points access (required for disk management)"
      },
      {
        "container": "/dev",
        "host": "/dev",
        "mode": "rw",
        "allocation": "automatic",
        "configurable": "no",
        "description": "Device access (required for disk management)"
      }
    ],
    "devices": [
      {
        "container": "/dev/video10",
        "host": "/dev/video10",
        "description": "Rockchip MPP video encoder"
      },
      {
        "container": "/dev/video11",
        "host": "/dev/video11",
        "description": "Rockchip MPP video decoder"
      },
      {
        "container": "/dev/dri",
        "host": "/dev/dri",
        "description": "DRI devices for hardware acceleration"
      }
    ],
    "constraints": {
      "min_memory": 512,
      "min_storage": 2048
    },
    "restart_policy": "unless-stopped",
    "sysctls": [],
    "cap_add": ["NET_BIND_SERVICE", "SYS_ADMIN", "DAC_OVERRIDE", "MKNOD"],
    "cap_drop": [],
    "security_opt": []
  },
  "abilities": {
    "notification": false,
    "widgets": true,
    "authentication": true,
    "search": false,
    "upnp": false
  },
  "tips": {
    "before_install": [
      {
        "content": "‚ö†Ô∏è Must set JWT_SECRET and ENCRYPTION_KEY before installation",
        "value": "warning"
      },
      {
        "content": "üîê First registration becomes super admin automatically",
        "value": "info"
      },
      {
        "content": "üìù Subsequent users need invite code from super admin (valid 1 hour)",
        "value": "info"
      },
      {
        "content": "üíæ Disk management requires privileged mode and host network",
        "value": "info"
      },
      {
        "content": "üê≥ App store requires Docker socket mount",
        "value": "info"
      },
      {
        "content": "üé¨ Hardware acceleration: Rockchip MPP, Amlogic, Intel QSV, NVIDIA NVENC",
        "value": "info"
      },
      {
        "content": "üîß Fixed: Disk mount/format 404 errors, App Store network retry, wallpaper theme",
        "value": "success"
      }
    ]
  },
  "changelog": {
    "latest_updates": "v0.1.1 - Fixed disk management 404 errors, improved App Store network handling with retry mechanism, added wallpaper theme system with color blending and glassmorphic effects"
  },
  "latest_update_date": "2026-01-20",
  "architectures": ["amd64", "arm64", "arm/v7"]
}
