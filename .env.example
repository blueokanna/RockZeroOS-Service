# RockZero Server Configuration
# Copy this file to .env and modify as needed

# Server binding
HOST=0.0.0.0
PORT=8080

# Database
DATABASE_URL=sqlite://rockzero.db

# JWT Authentication
JWT_SECRET=change-this-to-a-secure-random-string-at-least-32-characters-long
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_EXPIRATION_DAYS=30

# Data Encryption
ENCRYPTION_KEY=change-this-32-character-key!!

# TLS Configuration (optional)
TLS_ENABLED=false
TLS_CERT_PATH=./certs/cert.pem
TLS_KEY_PATH=./certs/key.pem

# Storage Management
# 外部存储路径（用于视频和大文件）
EXTERNAL_STORAGE_PATH=/mnt/external
VIDEO_STORAGE_PATH=/mnt/external/videos
TEMP_STORAGE_PATH=/mnt/external/temp

# HLS 缓存路径
HLS_CACHE_PATH=./data/hls_cache

# 日志路径
LOG_PATH=./data/logs

# 存储空间管理
MIN_FREE_SPACE=1073741824  # 最小可用空间（字节），默认 1GB
HLS_CACHE_RETENTION_DAYS=7  # HLS 缓存保留天数
TEMP_FILE_RETENTION_DAYS=1  # 临时文件保留天数
LOG_RETENTION_DAYS=30  # 日志文件保留天数

# Secure Storage
SECURE_STORAGE_PATH=./data/secure_storage

# Data Directory
DATA_DIR=./data

# Logging
RUST_LOG=info

# Command line usage:
# rockzero --port 8080 --host 0.0.0.0
# rockzero -p 8080 -h 0.0.0.0
